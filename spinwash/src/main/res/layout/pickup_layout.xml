<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_blue_light"
    android:orientation="vertical" >
    
    

<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical" >
<TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:text="Address"
        android:textSize="15sp" />
   <View
        android:id="@+id/View00"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvAddress"
        android:background="@color/grey" />

 
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
               android:layout_below="@+id/tvAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@+id/btMap"
        android:background="@color/transparent"
        android:ems="10"
        android:hint="Address"
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etApt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etAddress"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btMap"
        android:background="@color/transparent"
        android:ems="10"
        android:hint="Apt, suite, etc."
        android:maxLines="1"
        android:padding="5dp" />

    <EditText
        android:id="@+id/etStreet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etApt"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btMap"
        android:background="@color/transparent"
        android:ems="10"
        android:hint="Street"
        android:maxLines="1"
        android:padding="5dp" />
<View
        android:id="@+id/View000"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etStreet"
        android:background="@color/grey" />
<TextView
        android:id="@+id/tvPickUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etStreet"
      android:layout_margin="10dp"
       android:text="Schedule Pickup"
        android:textSize="15sp" />
    <View
        android:id="@+id/View01"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvPickUp"
        android:background="@color/grey" />

    

    <LinearLayout
        android:id="@+id/llDate"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View01"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlStartDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5"
            android:gravity="center" >

            <EditText
                android:id="@+id/etStartDate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvStartDate"
                android:background="@color/transparent"
                android:focusable="false"
                android:padding="5dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Date"
                android:textSize="15sp" />
        </RelativeLayout>

        <View
            android:id="@+id/View02"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rlStartTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5"
            android:gravity="center" >

            <EditText
                android:id="@+id/etStartTime"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvStartTime"
                android:background="@color/transparent"
                android:focusable="false"
                android:padding="5dp"
                android:singleLine="true" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Time"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
   <View
        android:id="@+id/View03"
        android:layout_width="match_parent"
        android:layout_height="1px"
          android:layout_below="@+id/llDate"
       
        android:layout_alignParentLeft="true"
        android:background="@color/grey" />

    
    
    <TextView
        android:id="@+id/tvDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llDate"
        android:layout_margin="10dp"
        android:text="Schedule Delivery"
        android:textSize="15sp" />
    <View
        android:id="@+id/View04"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvDelivery"
        android:background="@color/grey" />

    

    <LinearLayout
        android:id="@+id/llTime"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/View04"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/rlEndDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5" >

            <TextView
                android:id="@+id/tvEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Date"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etEndDate"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvEndDate"
                android:background="@color/transparent"
                android:focusable="false"
                android:padding="5dp"
                android:singleLine="true" >

                <requestFocus />
            </EditText>
        </RelativeLayout>

        <View
            android:id="@+id/View05"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rlEndTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight=".5" >

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="Time"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/etEndTime"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tvEndTime"
                android:background="@color/transparent"
                android:focusable="false"
                android:padding="5dp"
                android:singleLine="true" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/View06"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llTime"
        android:background="@color/grey" />

    <ImageView
        android:id="@+id/btMap"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignBottom="@+id/etAddress"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="-10dp"
        android:background="@drawable/go_round_bt"
        android:padding="5dp"
        android:src="@drawable/ic_location" />

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/llTime"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:ems="10"
        android:hint="Special Instructions"
        android:lines="2" />

    <View
        android:id="@+id/View07"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etNote"
        android:background="@color/grey" />

    <Button
        android:id="@+id/btSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNote"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/bluebtn"
        android:padding="10dp"
        android:text="Request pickup"
        android:textColor="@color/white" />

</RelativeLayout>

</ScrollView>